.container

  div.main-breadcrumb(ncy-breadcrumb)

  .row
    .col-md-12
      .text-heading
        .text-heading-label Name
        | {{group.title}}
      .text-heading(ng-if="group.description")
        .text-heading-label Description
        | {{group.description}}
      .btn-actions: .btn-group.btn-group-sm
        a.btn.btn-primary-clear(group-edit="group") Edit
      hr
  .row
    .col-md-6
      p.list-group
        a.list-group-item(ng-repeat="table in group.tables")
          b.list-group-item-heading {{table.title}}

  .row: .col-md-6
    button.btn.btn-danger(group-delete="group") Delete Group

  p: br
