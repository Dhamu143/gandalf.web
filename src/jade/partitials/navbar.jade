nav.main-navbar.navbar.navbar-static-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button',
        data-toggle='collapse',
        data-target='#navbar-menu',
        aria-expanded='false'
        )
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Gandalf

    #navbar-menu.collapse.navbar-collapse
      ul.nav.navbar-nav(ng-if="$root.user")
        li(ui-sref-active="active"): a(ui-sref="tables-list") Tables
        li(ui-sref-active="active"): a(ui-sref="history-list") History
        // li(ui-sref-active="active"): a(ui-sref="groups-list") Groups

      ul.nav.navbar-nav.navbar-right(ng-if="$root.user")
        li.dropdown(uib-dropdown)
          a.dropdown-toggle(role="button", uib-dropdown-toggle) {{$root.user.username}}
            | &#32;
            b.caret
          ul.dropdown-menu
            li.dropdown-header
              b {{$root.user.username}}
              br
              span {{$root.user.email}}
            li.divider(role="separator")
            li
              a(ng-click="logout()") Sign Out

      ul.nav.navbar-nav.navbar-right(ng-if="!$root.user")
        li: a(ui-sref="sign-in") Sign in
        li: a(ui-sref="sign-up") Sign up
